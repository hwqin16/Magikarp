<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/nav_maps">

    <fragment
        android:id="@+id/nav_login"
        android:name="com.magikarp.android.ui.login.LoginFragment"
        android:label="@string/title_fragment_login"
        tools:layout="@layout/fragment_login" />

    <fragment
        android:id="@+id/nav_maps"
        android:name="com.magikarp.android.ui.maps.MapsFragmentWrapper"
        android:label="@string/title_fragment_maps"
        tools:layout="@layout/fragment_maps">
        <argument
            android:name="@string/args_is_user_data"
            android:defaultValue="false"
            app:argType="boolean" />
        <action
            android:id="@+id/action_nav_maps_to_post_viewer"
            app:destination="@id/nav_post_viewer" />
    </fragment>

    <fragment
        android:id="@+id/nav_my_posts"
        android:name="com.magikarp.android.ui.maps.MapsFragment"
        android:label="@string/title_fragment_my_posts"
        tools:layout="@layout/fragment_maps">
        <argument
            android:name="@string/args_is_user_data"
            android:defaultValue="true"
            app:argType="boolean" />
        <action
            android:id="@+id/action_nav_maps_to_post_editor"
            app:destination="@id/nav_post_editor" />
    </fragment>

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.magikarp.android.ui.app.SettingsFragment"
        android:label="@string/title_fragment_settings" />

    <fragment
        android:id="@+id/nav_help"
        android:name="com.magikarp.android.ui.app.HelpFragment"
        android:label="@string/title_fragment_help"
        tools:layout="@layout/fragment_help" />

    <fragment
        android:id="@+id/nav_post_editor"
        android:name="com.magikarp.android.ui.posts.PostFragment"
        android:label="@string/title_fragment_edit_post"
        tools:layout="@layout/fragment_post">
        <argument
            android:name="@string/args_is_editable"
            android:defaultValue="true"
            app:argType="boolean" />
        <argument
            android:name="@string/args_latitude"
            app:argType="java.lang.Double"
            app:nullable="true" />
        <argument
            android:name="@string/args_longitude"
            app:argType="java.lang.Double"
            app:nullable="true" />
        <argument
            android:name="@string/args_text"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="@string/args_image_uri"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/nav_post_viewer"
        android:name="com.magikarp.android.ui.posts.PostFragment"
        android:label="@string/title_fragment_view_post"
        tools:layout="@layout/fragment_post">
        <argument
            android:name="@string/args_is_editable"
            android:defaultValue="false"
            app:argType="boolean" />
        <argument
            android:name="@string/args_latitude"
            app:argType="java.lang.Double" />
        <argument
            android:name="@string/args_longitude"
            app:argType="java.lang.Double" />
        <argument
            android:name="@string/args_text"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="@string/args_image_uri"
            app:argType="string"
            app:nullable="true" />
    </fragment>

</navigation>
